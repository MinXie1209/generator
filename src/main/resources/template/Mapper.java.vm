package ${packageName}.mapper;

import org.apache.ibatis.annotations.Param;
import org.apache.ibatis.annotations.Select;
import org.apache.ibatis.annotations.Update;
import org.mapstruct.Mapper;
import ${packageName}.entity.${ClassName};

import java.util.List;

/**
 * @InterfaceName ${ClassName}Mapper
 * @Description TODO
 * @Author 江神
 * @Date ${now}
 * @Version 1.0
 **/
@Mapper
public interface ${ClassName}Mapper {
    @Insert("insert into ${className}(#foreach($tableColumn in $tableColumns)$tableColumn.columnName#if($foreach.hasNext),#end#end) value(#foreach($tableColumn in $tableColumns)#{${className}.$tableColumn.javaColumnName}#if($foreach.hasNext),#end#end)")
    Integer add${ClassName}(@Param("${className}")${ClassName} ${className});

    @UpdateProvider(type=${ClassName}Provide.class,method="update${ClassName}")
    Integer update${ClassName}(${ClassName} ${className});

    @DeleteProvider(type=${ClassName}Provide.class,method="delete${ClassName}ById")
    Integer delete${ClassName}ById(Integer id);

    @SelectProvider(type=${ClassName}Provide.class,method="get${ClassName}ById")
    ${ClassName} get${ClassName}ById(Integer id);

    @SelectProvider(type=${ClassName}Provide.class,method="list${ClassName}")
    List<${ClassName}> list${ClassName}();

}
